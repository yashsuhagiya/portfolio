{
  "version": 2,
  "builds": [
    { "src": "src/pages/api/**/*.ts", "use": "@vercel/node" },
    { "src": "src/pages/**/*.astro", "use": "@astrojs/vercel/static" },
    { "src": "src/pages/**/*.mdx", "use": "@astrojs/vercel/static" },
    { "src": "src/pages/**/*.tsx", "use": "@astrojs/vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "status": 404, "dest": "/404.html" }
  ]
}
