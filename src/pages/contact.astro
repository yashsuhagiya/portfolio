---
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";

const access_code = process.env.ACCESS_CODE;
---

<Layout title="Contact | Yash Suhagiya">
  <main class="flex flex-col items-center">
    <h1>Contact</h1>
    <div
      id="form-container"
      class="bg-blue-green-gradient p-0.5 rounded-lg my-16"
    >
      <form
        id="contact-form"
        class="flex flex-col rounded-lg w-[320px] md:w-[750px] p-20 gap-4 bg-zinc-900 text-white [&_input]:block [&_input]:bg-zinc-800 max-sm:[&_input]:w-full [&_textarea]:block [&_textarea]:bg-zinc-800 [&_select]:block [&_select]:bg-zinc-800 [&_select]:text-white"
        action=`https://getform.io/f/${access_code}`
        method="POST"
      >
        <label for="name" class="font-semibold">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Jane Doe"
          class="rounded-sm p-5"
          required
        />
        <label for="email" class="font-semibold">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="jane.doe@example.com"
          class="rounded-sm p-5"
          required
        />
        <label for="subject" class="font-semibold">Subject</label>
        <select
          id="subject"
          name="subject"
          class="rounded-sm p-5 appearance-none"
          required
        >
          <option value="General">General</option>
          <option value="Freelance Work">Freelance Work</option>
          <option value="Collaboration">Collaboration</option>
          <option value="Job Opportunity">Job Opportunity</option>
          <option value="Other">Other</option>
        </select>
        <label for="message" class="font-semibold">Message</label>
        <textarea
          id="message"
          name="message"
          placeholder="Hello, I am Jane Doe..."
          class="h-48 rounded-sm p-5 resize-none"
          required></textarea>
        <button
          type="submit"
          class="flex self-center items-center gap-1 w-fit px-4 py-2 rounded-lg text-white font-semibold bg-gray-400 backdrop-blur-lg bg-opacity-10 mt-4 hover:scale-105 hover:transition-transform hover:duration-300"
        >
          <Icon name="ic:baseline-send" class="h-4" />
          Send
        </button>
        <div class="form-message">
          <span class="output_message text-center font-weight-600 uppercase"
          ></span>
        </div>
      </form>
    </div>
  </main>
</Layout>
